{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{.Folder}}",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#5BCCF0",
          "foreground": "#ffffff",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": " Ricardo Molendijk ",
          "type": "session"
        },
        {
          "background": "#5ba0f0",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "folder"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#5072d0",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " \u279c ({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }}) ",
          "type": "git"
        },
        {
          "background": "#7B42BC",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \uDB84\uDC62 {{ .Version }}{{ if .WorkspaceName }}/{{ .WorkspaceName }}{{ end }} ",
          "type": "terraform"
        },
        {
          "type": "command",
          "style": "plain",
          "background": "#3D68FF",
          "foreground": "#ffffff",
          "properties": {
            "shell": "bash",
            "command": "[ -f Dockerfile ] && echo \"   $(docker --version | awk '{print $3}') \""
          }
        },
        {
          "background": "#3D68FF",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " ﴱ {{.Context}}{{if .Namespace}}/{{.Namespace}}{{end}} ",
          "type": "kubectl",
          "parse_kubeconfig": true
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
